#!/usr/bin/env php
<?php
$autoloadPath1 = __DIR__ . '/../../../autoload.php';
$autoloadPath2 = __DIR__ . '/../vendor/autoload.php';
if (file_exists($autoloadPath1)) {
    require_once $autoloadPath1;
} else {
    require_once $autoloadPath2;
}

use function gendiff\Core\{
    normalizePathToFile,
    decodeFileContents,
    getFileContents,
    genDiff
};

$doc = <<< DOC
Generate diff

Usage:
  gendiff (-h|--help)
  gendiff (-v|--version)
  gendiff [--format <fmt>] <firstFile> <secondFile>

Options:
  -h --help                     Show this screen
  -v --version                  Show version
  --format <fmt>                Report format [default: pretty]
DOC;

$args = Docopt::handle($doc);
$pathToFile1 = normalizePathToFile($args['<firstFile>']);
$pathToFile2 = normalizePathToFile($args['<secondFile>']);
$firstFile = decodeFileContents(getFileContents($pathToFile1));
$secondFile = decodeFileContents(getFileContents($pathToFile2));

print_r(genDiff($firstFile, $secondFile));
